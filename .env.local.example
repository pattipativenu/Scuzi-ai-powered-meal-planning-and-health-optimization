# AWS Credentials for Secrets Manager
AWS_ACCESS_KEY_ID=your_new_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_new_aws_secret_key_here

# WHOOP OAuth Credentials (Server-side only - never exposed to client)
WHOOP_CLIENT_ID=your_whoop_client_id_here
WHOOP_CLIENT_SECRET=your_whoop_client_secret_here
WHOOP_REDIRECT_URI=https://your-domain.com/api/whoop/callback

# Encryption key for state parameter (generate a secure random key)
OAUTH_STATE_SECRET=your_oauth_state_secret_here

AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=scuzi-ai-recipes

# Lambda Configuration
LAMBDA_FUNCTION_NAME=storeMealPlanData
LAMBDA_ARN=arn:aws:lambda:us-east-1:your-account:function:storeMealPlanData

# DynamoDB Tables
DYNAMO_TABLE_MEAL_PLAN=MealPlanData
DYNAMO_TABLE_HISTORY=ScuziHistory

# S3 Buckets
S3_BUCKET_MEALS=scuzi-meals
S3_BUCKET_RECIPES=scuzi-ai-recipes

RDS_HOST=your_rds_host_here
RDS_PORT=3306
RDS_USER=admin
RDS_PASSWORD=your_new_secure_password_here
RDS_DATABASE=scuzi_meals

# WHOOP Sync Configuration
WHOOP_SYNC_TOKEN=your_whoop_sync_secret_here
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# AWS Bedrock Bearer Token (Primary Authentication)
AWS_BEARER_TOKEN_BEDROCK=your_new_bearer_token_here

# Production URLs (will be updated in production)
WHOOP_PRODUCTION_CALLBACK=https://your-domain.com/api/whoop/callback
WHOOP_FALLBACK_CALLBACK=https://your-fallback-domain.com/api/whoop/callback