# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Bearer Token for Bedrock
AWS_BEARER_TOKEN_BEDROCK=your_bedrock_bearer_token

# Database Configuration - RDS MySQL
RDS_HOST=your_rds_host
RDS_PORT=3306
RDS_USER=your_rds_user
RDS_PASSWORD=your_rds_password
RDS_DATABASE=your_database_name

# AWS S3 Configuration
S3_BUCKET_MEALS=your_s3_bucket
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# AWS Secrets Manager ARNs
RDS_SECRETS_ARN=your_rds_secrets_arn
AWS_KEYS_SECRET_ARN=your_aws_keys_secret_arn
AWS_BEDROCK_SECRET_ARN=your_bedrock_secret_arn
APP_SECRETS_ARN=your_app_secrets_arn

# WHOOP Integration
WHOOP_CLIENT_ID=your_whoop_client_id
WHOOP_CLIENT_SECRET=your_whoop_client_secret

# Turso Database (for auth)
TURSO_CONNECTION_URL=your_turso_url
TURSO_AUTH_TOKEN=your_turso_token

# Public URLs
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app